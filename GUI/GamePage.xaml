<Page x:Class="WeltraumShooter2022_2023.GUI.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WeltraumShooter2022_2023"
      mc:Ignorable="d" 
      
      Title="GamePage">

    <Grid>
        <Canvas Name="SpaceCanvas"  Background="Black" SizeChanged="SpaceCanvas_SizeChanged"  />
        <TextBlock  Name="Go_Btn" Text="GO"  Height="Auto"  Foreground="White"  Background="{x:Null}" FontFamily="Bauhaus 93" FontSize="60"  TextAlignment="Center" HorizontalAlignment="Center"  VerticalAlignment="Center" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" />
        
    </Grid>
</Page>
